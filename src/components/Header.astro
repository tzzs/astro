---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header>
    <h2 class="text-3xl font-bold leading-7 text-gray-900 sm:truncate sm:text-3xl sm:tracking-tight">
        {SITE_TITLE}
    </h2>
    <nav class="flex items-baseline space-x-4">
        <HeaderLink href="/" class="nav">Home</HeaderLink>
        <HeaderLink href="/blog" class="nav">Blog</HeaderLink>
        <HeaderLink href="/about" class="nav">About</HeaderLink>
        <HeaderLink href="https://twitter.com/astrodotbuild" target="_blank" class="nav">Twitter</HeaderLink>
        <HeaderLink href="https://github.com/withastro/astro" target="_blank" class="nav">GitHub</HeaderLink>
    </nav>
</header>
<style>
    header {
        margin: 0em 0 2em;
    }
    h2 {
        margin: 0.5em 0;
    }

    .nav {
        @apply text-gray-800 hover:bg-gray-700 hover:text-white rounded-md px-3 py-2 text-sm font-medium
    }
</style>
